{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2016",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "jsx": "react",
    "paths": {
      "@api": ["api/index.ts"],
      "@store/*": ["store/*"],
      "@types": ["types/index.ts"],
      "@enums": ["enums.ts"],
      "@utils": ["utils.ts"]
    }
  },
  "include": [
    "src/**/*",
    "src/declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
